<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<LangVersion>8</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<SelfContained>false</SelfContained>
		<PublishSingleFile>false</PublishSingleFile>
		<PublishReadyToRun>false</PublishReadyToRun>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<OutputPath>..\..\..\dist\Debug\netcoreapp31\win-x64\plugins</OutputPath>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<OutputPath>..\..\..\dist\Release\netcoreapp31\win-x64\plugins</OutputPath>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Kanvas" Version="2.0.8" />
	  <PackageReference Include="Komponent" Version="2.0.8" />
	  <PackageReference Include="Kontract" Version="2.0.8" />
	</ItemGroup>
